const compararejercicionumero1 = () => {
  const numero1 = document.getElementById('ejercicio1-numero1').value * 1;
  const numero2 = document.getElementById('ejercicio1-numero2').value * 1;
  const numero3 = document.getElementById('ejercicio1-numero3').value * 1;
  const resultadomayor = document.getElementById("resultadomayor");
  const resultadomenor = document.getElementById("resultadomenor")
  console.log(numero1.innerHTML)
  let mayor = Math.max(numero1, numero2, numero3), 
      menor = Math.min(numero1, numero2, numero3);

  resultadomayor.textContent = mayor;
  resultadomenor.textContent = menor;
}
const sumarejercionumero2 = () => {
    const numero1 = document.getElementById("ejercicio2_numero1").value * 1;
    const numero2 = document.getElementById("ejercicio2_numero2").value * 1;
  
    const resultado_ejercicio2 = document.getElementById("resultado_ejercicio2");
  
    resultado_ejercicio2.value = numero1 + numero2;
  };
  const repetirejercicio3 = () => {
    const palabra = document.getElementById("ejercicio3_palabra").value;
    const numero1 = document.getElementById("ejercicio3_numero1").value;
    const resultado_ejercicio3 = document.getElementById("resultado_ejercicio3");
  
    for (let i = 0; i < numero1; i++) {
        resultado_ejercicio3.textContent =
        resultado_ejercicio3.innerHTML + `${i + 1} - ${palabra} `;
    }
  };
  const calcularejercicio5 = () => {
    const resultado = document.getElementById("resultado_ejercicio5");
    const palabra = document.getElementById("ejercicio5_palabra").value;
    resultado.textContent = `${palabra} tiene ${palabra.length} letras`;
  };
  const verificarejercicio6 = () => {
    const resultado = document.getElementById("resultado_ejercicio6");
    const numero1 = document.getElementById("ejercicio6_numero1").value * 1;
    const dato = numero1 % 2;
  
    if (dato === 0) {
      resultado.textContent = `El numero ${numero1} es PAR`;
    } else {
      resultado.textContent = `El numero ${numero1} es IMPAR`;
    }
  };
  const verificarejercicio7 = () => {
    const num1 = document.getElementById("ejercicio7_numero1").value * 1;
    const num2 = document.getElementById("ejercicio7_numero2").value * 1;
    const resultado = document.getElementById("resultado_ejercicio7");
    resultado.textContent = "";
  
    let menor = Math.min(num1, num2);
    let mayor = Math.max(num1, num2);
  
    while (menor <= mayor) {
      let calculo = menor % 3;
      if (calculo === 0) {
        resultado.textContent = resultado.innerHTML + " | " + menor;
      }
      menor++;
    }
  };
  const primosejercicio8 = () => {
    const num1 = document.getElementById("ejercicio8_numero1").value * 1;
    const resultado = document.getElementById("resultado_ejercicio8");
    resultado.textContent = "";
  
    const esprimo = (num) => {
      for (let i = 2; i < num; i++) {
        if (num % i === 0) {
          return false;
        }
        return true;
      }
    };
    for (let x = 0; x <= num1; x++) {
      esprimo(x) && (resultado.textContent = resultado.innerHTML + " | " + x);
    }
  };
  const fraseejercicio9 = () => {
    const nombre = document.getElementById("ejercicio9_nombre").value,
      apellido = document.getElementById("ejercicio9_apellido").value,
      ciudad = document.getElementById("ejercicio9_ciudad").value,
      edad = document.getElementById("ejercicio9_edad").value,
      resultado = document.getElementById("resultado_ejercicio9");
  
    resultado.textContent = `Mi nombre es ${nombre} ${apellido}, tengo ${edad} años Nací en la ciudad de ${ciudad}.`;
  };
  const mostrarejercicio10 = () => {
    const num1 = document.getElementById("ejercicio10_numero1").value * 1,
      num2 = document.getElementById("ejercicio10_numero2").value * 1,
      resultado = document.getElementById("resultado_ejercicio10");
    resultado.textContent = "";
  
    let menor = Math.min(num1, num2);
    let mayor = Math.max(num1, num2);
  
    for (let x = 0; x <= mayor; x++) {
      if (x > menor && x < mayor) {
        resultado.textContent = resultado.innerHTML + " | " + x;
      }
    }
  };